{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "*": ["types/*"],
            "@/*": ["*"]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}